---
import Navbar from '../components/Navbar.astro';
import Head from '../components/Head.astro';
---

<html lang="en">
	<Head title='Contact'/>
	<body class="bg-gray-200">	
		<Navbar/>
		<section class="contact-section">
			<div class="container mx-auto p-6">
				<h1 class="text-3xl font-bold mb-4">Contact Us</h1>
				<form class="px-8 pt-6 pb-8 mb-4">
					<div class="mb-4">
						<label class="block text-gray-700 text-sm font-bold mb-2" for="name">
							Name
						</label>
						<input class="shadow appearance-none border rounded-xl w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="name" type="text" placeholder="Your name">
					</div>
					<div class="mb-4">
						<label class="block text-gray-700 text-sm font-bold mb-2" for="email">
							Email
						</label>
						<input class="shadow appearance-none border rounded-xl w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="email" type="email" placeholder="Your email">
					</div>
					<div class="mb-6">
						<label class="block text-gray-700 text-sm font-bold mb-2" for="message">
							Message
						</label>
						<textarea class="shadow appearance-none border rounded-xl w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="message" placeholder="Your message"></textarea>
					</div>
					<div class="flex items-center justify-between">
						<button class="bg-gray-800 text-white font-bold py-2 px-4 rounded-xl focus:outline-none focus:shadow-outline" type="button">
							Send
						</button>
					</div>
				</form>
			</div>
		</section>
	</body>
</html>
