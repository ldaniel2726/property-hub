<div class="justify-between w-full flex p-6">
	<a class="justify-self-start font-bold" href="/">Best Logo</a>
	<div class="flex">
		<a id="home" class="mx-6 uppercase expanding-underline" href="/">Home</a>
		<a id="properties" class="mx-6 uppercase expanding-underline" href="/properties/">Properties</a>
		<a id="about" class="mx-6 uppercase expanding-underline" href="/about.html">About</a>
		<a id="contact" class="mx-6 uppercase expanding-underline" href="/contact.html">Contact</a>
	</div>
	<a class="underline" href="tel:+1 (403) 000 000">+1 (403) 000 000</a>
	<script>
        const path = window.location.pathname;
        const normalizedPath = path.endsWith('/') && path.length > 1 ? path.slice(0, -1) : path;
        const pageMap = {
            '/': 'home',
            '/properties': 'properties',
            '/about.html': 'about',
            '/contact.html': 'contact'
        };

        if (pageMap[normalizedPath]) {
            document.getElementById(pageMap[normalizedPath]).classList.add('selection-underline');
        }
    </script>
	<style>
		.expanding-underline {
            text-decoration: none;
            display: inline-block;
            position: relative;
        }

        .expanding-underline:after {    
            background: none repeat scroll 0 0 transparent;
            bottom: 0;
            content: "";
            display: block;
            height: 2px;
            left: 50%;
            position: absolute;
            background: #000;
            transition: width 0.3s ease 0s, left 0.3s ease 0s;
            width: 0;
        }

        .expanding-underline:hover:after,
		.selection-underline:after {
            width: 100%;
            left: 0;
        }
	</style>
</div>