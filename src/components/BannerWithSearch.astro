<div class="relative bg-cover bg-center h-full mb-4 mx-4 p-12 rounded-lg" style="background-image: url('banner-image.jpg');">
    <div class="absolute inset-0 bg-black opacity-50 rounded-lg shadow-xl shadow-black"></div>
    <div class="relative z-10 flex flex-col items-center justify-center h-full text-gray-200 px-4 text-center">
      <div class="flex flex-col justify-end h-full">
        <h1 id="banner-title" class="text-4xl md:text-6xl font-bold mb-4">
          Buy or rent properties easily online.
        </h1>
      </div>
      <div class="h-full flex flex-col justify-center">
          <div class="flex ml-10 shadow-lg opacity-90">
            <button id="buy" class="bg-gray-400 text-gray-800 py-1 px-4 rounded-tl-md active hover: duration-300 transition-all ease-in-out">Buy</button>
            <div class="w-0.5 bg-transparent"></div>
            <button id="rent" class="bg-gray-400 text-gray-800 py-1 px-4 rounded-tr-md hover: duration-300 transition-all ease-in-out">Rent</button>
          </div>
          <div class="bg-white w-full bg-opacity-75 p-4 rounded-md flex flex-col md:flex-row items-center space-y-2 md:space-y-0 md:space-x-4">
            <!--<select class="rounded-md py-2 px-4 w-full md:w-auto text-gray-800">
              <option>Category</option>
            </select>
            <select class="rounded-md py-2 px-4 w-full md:w-auto text-gray-800">
              <option>Location</option>
            </select>-->
            <div class="relative w-full md:w-auto">
              <input type="text" id="search" placeholder="Search..." class="rounded-md py-2 px-4 w-full md:w-auto text-gray-800" />
              <div id="results" class="absolute bg-white border border-gray-300 rounded-md mt-1 w-full max-h-60 overflow-y-auto hidden"></div>
            </div>
            <button class="bg-yellow-500 text-gray-800 py-2 px-4 rounded-md flex items-center hover:bg-yellow-600 duration-300 transition-all ease-in-out">
